@using RenderFrag.Data
@foreach (var person in Persons)
{
    <PersonCard Id="@person.Id" Name="@person.Name" Lastname="@person.Lastname">
        <Child>
            @foreach (var course in person.Courses)
            {
                <CourseCard Course="@course"/>      
            }
        </Child>
    </PersonCard>
}

